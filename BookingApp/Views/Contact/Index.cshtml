@model BookingApp.ApplicationLogic.DataModel.Contact
@{
    ViewData["Title"] = "Contact";
}
<div class="container w-50 text-center">
    <h1 class="display-4">Contact</h1>
    <a href='@Url.Action("ViewMessages", "Contact")'>ViewMessages</a>
    <a href='@Url.Action("DeleteMessage", "Contact")'>DeleteMessage</a>
    <form style="margin-top: 8rem" asp-action="AddMessage" method="post">
        <div class="form-group">
            <label for="emalAdress">Your email address</label>
            <input type="email" class="form-control" asp-for="Email" aria-describedby="emailHelp">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Describe your problem</label>
            <textarea class="form-control" id="textarea" asp-for="Message" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>