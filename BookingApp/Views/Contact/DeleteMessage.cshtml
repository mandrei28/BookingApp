@model BookingApp.ApplicationLogic.DataModel.Contact
@{
    ViewData["Title"] = "DeleteMessage";
    IEnumerable<Guid> ids = ViewData["MessagesIds"] as IEnumerable<Guid>;
}

<div class="container w-50 text-center">
    <h1 class="display-4">Delete Message</h1>
    <form style="margin-top: 13rem" asp-controller="Contact" asp-action="DeleteMessage" method="post">

        <select class="form-control" asp-for="Id"
                asp-items="@(new SelectList(ids))">
            <option>Please select message id</option>
        </select>

        <button style="margin-top: 3rem" type="submit" class="btn btn-primary">Delete</button>
    </form>
</div>
