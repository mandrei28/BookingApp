    restaurants.Add(restaurantModel6);
    RestaurantModel restaurantModel7 = new RestaurantModel("~/Images/mcdonalds.png", "McDonalds7");
    restaurants.Add(restaurantModel7);
    RestaurantModel restaurantModel8 = new RestaurantModel("~/Images/mcdonalds.png", "McDonalds8");
    restaurants.Add(restaurantModel8);


}
<div class="text-center">
    <h1 class="display-4">Restaurants</h1>
    <div class="card-deck">
        @foreach (var restaurant in restaurants)
        {
            <a class="card split" asp-area="" asp-controller="Home" asp-action="Restaurant">
                <div>
                    <img src="@Url.Content(restaurant.ImgPath)" class="card-img-top" alt="@restaurant.Name">
                    <div class="card-body">
                        <h5 class="card-title">@restaurant.Name</h5>
                    </div>
                </div>
            </a>
        }
    </div>
</div>