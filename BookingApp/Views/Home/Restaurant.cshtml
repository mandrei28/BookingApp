
@{
    ViewData["Title"] = "Restaurant";
    List<RestaurantModel> restaurants = new List<RestaurantModel>();
    RestaurantModel restaurantModel1 = new RestaurantModel("~/Images/mcdonalds.png", "McDonalds1");
    restaurants.Add(restaurantModel1);
    RestaurantModel restaurantModel2 = new RestaurantModel("~/Images/mcdonalds.png", "McDonalds2");
    restaurants.Add(restaurantModel2);
    RestaurantModel restaurantModel3 = new RestaurantModel("~/Images/mcdonalds.png", "McDonalds3");
    restaurants.Add(restaurantModel3);
    RestaurantModel restaurantModel4 = new RestaurantModel("~/Images/mcdonalds.png", "McDonalds4");
    restaurants.Add(restaurantModel4);
    RestaurantModel restaurantModel5 = new RestaurantModel("~/Images/mcdonalds.png", "McDonalds5");
