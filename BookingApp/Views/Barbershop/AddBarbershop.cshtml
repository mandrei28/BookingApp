@model BookingApp.ApplicationLogic.DataModel.Barbershop
@{
    ViewData["Title"] = "AddBarbershop";
}

<div class="container w-50 text-center">
    <h1 class="display-4">Add Barbershop</h1>
    <form style="margin-top: 8rem" asp-action="AddBarbershop" method="post">
        <div class="form-group">
            <label for="barbershopName">Barbershop Name</label>
            <input class="form-control" type="text" asp-for="Name">
        </div>
        <div class="form-group">
            <label for="barbershopImage">Image Path</label>
            <input class="form-control" type="text" asp-for="ImgPath">
        </div>

        <button type="submit" class="btn btn-primary">Add</button>
    </form>
</div>

